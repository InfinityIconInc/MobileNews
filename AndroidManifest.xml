<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infinityicon.mobilenews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mn_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.infinityicon.mobilenews.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.infinityicon.mobilenews.UpdateNews"
            android:label="@string/strGetLatestNews" >
        </activity>
        <activity
            android:name="com.infinityicon.mobilenews.DisplayNews"
            android:label="Full News" >
        </activity>
        <activity android:name="com.infinityicon.mobilenews.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>